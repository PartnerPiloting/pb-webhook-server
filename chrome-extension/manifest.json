{
  "manifest_version": 3,
  "name": "Network Accelerator - LinkedIn Quick Update",
  "version": "1.0.0",
  "description": "Quickly save LinkedIn conversations to your Network Accelerator portal",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "https://www.linkedin.com/*",
    "https://pb-webhook-server.vercel.app/*",
    "https://pb-webhook-server-staging.vercel.app/*",
    "https://pb-webhook-server.onrender.com/*",
    "https://pb-webhook-server-staging.onrender.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://www.linkedin.com/messaging/*", "https://www.linkedin.com/in/*"],
      "js": ["content-linkedin.js"],
      "css": ["styles.css"]
    },
    {
      "matches": ["https://pb-webhook-server.vercel.app/*", "https://pb-webhook-server-staging.vercel.app/*"],
      "js": ["content-portal.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
